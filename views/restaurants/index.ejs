<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<h1>All Restaurants</h1>

<% for(let restaurant of restaurants){ %>
<div class="card mb-3 mt-6">
  <div class="row">
    <div class="col-md-4">
      <% if(restaurant.images.length) { %>
      <img src="<%=restaurant.images[0].url%>" alt="" class="img-fluid" />
      <% } else { %>
      <img
        src="https://res.cloudinary.com/dg0it3ba2/image/upload/v1629896213/YelpCamp/thpyejss0xcit5mlpvkm.jpg"
        alt=""
        class="img-fluid"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%=restaurant.title%></h4>
        <p class="card-text"><%=restaurant.description%></p>
        <p class="card-text">
          <small class="text-muted"><%=restaurant.location%></small>
        </p>
        <a href="/restaurants/<%=restaurant._id%>" class="btn-primary btn"
          >View <%=restaurant.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const restaurants = {features: <%-JSON.stringify(restaurants)%>};
</script>
<script src="/javascripts/clusterMap.js"></script>
