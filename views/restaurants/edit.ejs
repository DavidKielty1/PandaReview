<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Restaurant</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/restaurants/<%=restaurant._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title </label>
        <input
          class="form-control"
          type="text"
          name="restaurant[title]"
          value="<%=restaurant.title%>"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location </label>
        <input
          class="form-control"
          type="text"
          name="restaurant[location]"
          value="<%=restaurant.location%>"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description </label>
        <textarea
          class="form-control mb-3"
          type="text"
          name="restaurant[description]"
          required
        >
<%=restaurant.description%></textarea
        >
        <div class="valid-feedback">Looks Good!</div>
        <label class="form-label" for="price">Price </label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Â£</span>
          </div>
          <input
            name="restaurant[price]"
            type="Number"
            class="form-control mb-3"
            aria-label="Price"
            aria-describedby="basic-addon1"
            placeholder="0.00"
            value="<%=restaurant.price%>"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <label class="form-label" for="price">Add More Files </label>
        <div class="input-group mb-3 custom-file">
          <input
            type="file"
            class="form-control custom-file-label"
            placeholder="Add More Files"
            id="image"
            name="image"
            multiple
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
      </div>
      <div class="mb-3">
        <% restaurant.images.forEach(function(img, i) { %>
        <img src="<%= img.thumbnail %> " class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
        </div>
        <label for="image-<%=i%>">Delete?</label>
        <% }) %>
      </div>
      <button class="btn btn-info mt-3 mb-3">Update Restaurant</button>
      <p>
        <a href="/restaurants/<%= restaurant._id %>">Back to Restauants</a>
      </p>
    </form>
  </div>
</div>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll(".validated-form");

    // Loop over them and prevent submission
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
